<div class="row">
  <div class="col-md-2">
  </div>
  
  <div class="col-md-8">
    <h3>Coment√°rios:</h3>
    
    <% @comentarios.each do |comentario| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= comentario.titulo %></h3>
        </div>
        <div class="panel-body">
