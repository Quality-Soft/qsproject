        </div>
      </div>
    <% end %>
  </div>
  
  <div class="col-md-2">
  </div>
</div>

<!-- Postar Comentarios -->
<hr>

<div class="row">
  <div class="col-md-2">
  </div>
  
  <div class="col-md-8">
    
    <%= form_for(@comentario) do |f| %>
    <% if @comentario.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@comentario.errors.count, "error") %> prohibited this comentario from being saved:</h2>

        <ul>
        <% @comentario.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Comente aqui:</h3>
      </div>
      <div class="panel-body">
        <div class="field">
          <div class="form-group">
            <%= f.label :nome %><br>
            <%= f.text_field :nome %>
          </div>
        </div>
        <div class="field">
          <div class="form-group">
            <%= f.label :titulo %><br>
            <%= f.text_field :titulo %>
          </div>
        </div>
        <div class="field">
          <div class="form-group">
            <%= f.label :descricao %><br>
              <%= f.text_area :descricao %>
          </div>
        </div>
        <div class="actions">
          <%= f.submit 'Comentar', class:'btn btn-lg btn-default' %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  
  <div class="col-md-2">
  </div>
</div>

